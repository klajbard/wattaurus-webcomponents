{
  "name": "wui",
  "version": "0.0.1",
  "description": "Wattaurus UI component library",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "scripts": {
    "lint": "lit-analyzer eslint '{packages,docs}/!(node_modules)*/!(*.bundle).js'",
    "format": "prettier '{packages,docs}/!(node_modules)*/!(*.bundle)*.{html,js}' --write",
    "clean": "rimraf packages/**/dist/ && rimraf docs/**/*.bundle.js",
    "build": "rollup -c",
    "build:docs": "rollup -c rollup.docs.config.js",
    "predeploy": "npm run build && npm run build:docs",
    "deploy": "gh-pages -d docs",
    "analyze": "wca analyze \"**/*.js\" --outFile custom-elements.json",
    "test": "karma start karma.conf.cjs --coverage",
    "test:watch": "karma start karma.conf.cjs --auto-watch=true --single-run=false",
    "test:update-snapshots": "karma start karma.conf.cjs --update-snapshots",
    "test:prune-snapshots": "karma start karma.conf.cjs --prune-snapshots"
  },
  "homepage": "https://klajbard.github.io/wattaurus-webcomponents/",
  "keywords": [
    "web-components",
    "lit-element",
    "ui-library"
  ],
  "files": [
    "dist",
    "package.json"
  ],
  "author": "David Klajbar <david@klajbar.com>",
  "license": "MIT",
  "dependencies": {
    "@wui/button": "file:packages/button",
    "@wui/link-icon": "file:packages/link-icon",
    "@wui/link-nav": "file:packages/link-nav",
    "@wui/link-social": "file:packages/link-social",
    "@wui/list": "file:packages/list",
    "@wui/list-elem": "file:packages/list-elem",
    "@wui/select": "file:packages/select"
  },
  "devDependencies": {
    "@babel/plugin-transform-runtime": "^7.12.1",
    "@babel/preset-env": "^7.12.1",
    "@open-wc/testing": "^2.5.10",
    "@open-wc/testing-karma": "^4.0.9",
    "@rollup/plugin-babel": "^5.2.1",
    "@rollup/plugin-commonjs": "^15.1.0",
    "@types/chai": "^4.2.11",
    "@types/mocha": "^7.0.2",
    "babel-eslint": "^10.1.0",
    "chai": "^4.2.0",
    "deepmerge": "^4.2.2",
    "eslint": "^6.8.0",
    "gh-pages": "^3.1.0",
    "karma": "^5.2.3",
    "karma-chai": "^0.1.0",
    "karma-coverage": "^2.0.3",
    "karma-mocha": "^2.0.1",
    "lerna": "^3.22.1",
    "lit-analyzer": "^1.1.9",
    "mocha": "^7.1.1",
    "prettier": "^2.0.4",
    "rimraf": "^3.0.2",
    "rollup": "^2.30.0",
    "rollup-plugin-copy": "^3.3.0",
    "rollup-plugin-node-resolve": "^5.2.0",
    "web-component-analyzer": "^1.0.3"
  }
}
